<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f0f0f0">

    <!-- Buttons Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Server"
            android:layout_marginEnd="5dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Server"
            android:layout_marginStart="5dp"
            android:background="#F44336"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Buttons Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/copyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Copy URL"
            android:layout_marginEnd="5dp"
            android:background="#2196F3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/folderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Open Folder"
            android:layout_marginStart="5dp"
            android:background="#FF9800"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server Status:"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/serverStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STOPPED"
            android:textColor="#F44336"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tunnel Status:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tunnelStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISABLED"
            android:textColor="#F44336"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- URL Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public URL:"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/urlText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://localhost:8080"
            android:textColor="#4CAF50"
            android:background="#E8F5E8"
            android:padding="10dp"
            android:textIsSelectable="true" />

    </LinearLayout>

    <!-- Stats Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="15dp"
            android:elevation="2dp"
            android:layout_marginEnd="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visitors"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visitorCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#2196F3"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="15dp"
            android:elevation="2dp"
            android:layout_marginStart="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Files Received"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fileCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#2196F3"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Log Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Log:"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/logText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application started successfully!\n"
                android:textColor="#666666"
                android:fontFamily="monospace"
                android:textSize="12sp" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
